 <script>
        // Dark Mode Funktion
        const toggleButton = document.getElementById("dark-mode-toggle");
        const body = document.body;

        // Prüfen, ob Dark Mode schon aktiviert wurde (localStorage)
        if (localStorage.getItem("darkMode") === "enabled") {
            body.classList.add("dark-mode");
            toggleButton.innerHTML = '<i class="fas fa-sun"></i>'; // Ändert Icon zu Sonne
        }

        // Event Listener für Klick auf den Button
        toggleButton.addEventListener("click", () => {
            body.classList.toggle("dark-mode");

            // Dark Mode speichern
            if (body.classList.contains("dark-mode")) {
                localStorage.setItem("darkMode", "enabled");
                toggleButton.innerHTML = '<i class="fas fa-sun"></i>'; // Sonne Icon
            } else {
                localStorage.setItem("darkMode", "disabled");
                toggleButton.innerHTML = '<i class="fas fa-moon"></i>'; // Mond Icon
            }
        });
   </script>

